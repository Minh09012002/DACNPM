@using Busticketsales.Models;
@model IList<Route>

<!-- Route -->
<div class="container-fluid py-5 wow fadeInUp" data-wow-delay="0.1s">
    <div class="container py-5">
        <div class="section-title text-center position-relative pb-3 mb-4 mx-auto" style="max-width: 600px;">
            <h5 class="fw-bold text-uppercase">Xe khách bình an</h5>
            <h1 class="mb-0">Các tuyến đường phố biến</h1>
        </div>
        <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.6s">
            @foreach(var r in Model)
            {
                <div class="testimonial-item bg-light my-4 mx-3">
                    <div class="testimonial-img d-flex align-items-center border-bottom  pb-4 ">
                        <img class="img-fluid rounded" src="@r.Images" style="">
                    </div>
                    <div class="pt-4 pb-5 px-3">
                        <span class="testimonial-way">@r.PointOfDe &rarr; @r.StopPoint</span>
                        <span class="testimonial-price">Giá vé : @r.Price</span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Route -->

