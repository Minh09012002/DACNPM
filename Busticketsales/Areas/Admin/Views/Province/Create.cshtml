@using Busticketsales.Utilities;
@model Busticketsales.Models.Booking;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới </h2>
    </div>
    <!-- Begin Form-->
    <form asp-action="Create" method="post">
        <div class="form-group col-md-12">
            <label asp-for="ProvinceStarts">Bắt đầu đi từ tỉnh</label>
            <input type="text" class="form-control mb-3" asp-for="ProvinceStarts" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ProvinceEnds">Đến tỉnh nào</label>
            <input type="text" class="form-control mb-3" asp-for="ProvinceEnds" />
        </div>
        <div class="form-group col-md-12 d-none">
            <label asp-for="Status">giá trị</label>
            <input type="text" class="form-control mb-3" asp-for="Status" value="1"/>
        </div>
        <div class="form-group col-md-6 mt-3 mb-3">
            <label>
                @Html.CheckBox("IsActive", false)
                Hiển thị
            </label>
        </div>
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trassh-fill"></i> Lưu lại
        </button>
    </form>
    <!-- End Form-->
</main>