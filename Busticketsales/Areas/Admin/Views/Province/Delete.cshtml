@model Busticketsales.Models.Booking
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa </h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" class="form-control mb-3" asp-for="BookingID" hidden />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="BookingID">BookingID</label>
            <input type="text" class="form-control mb-3" asp-for="BookingID" disabled />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="ProvinceStarts">Tỉnh bắt đầu</label>
            <input type="text" class="form-control mb-3" asp-for="ProvinceStarts" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ProvinceEnds">Tỉnh kết thúc</label>
            <input type="text" class="form-control mb-3" asp-for="ProvinceEnds" disabled />
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa 
        </button>
    </form>

</main>
