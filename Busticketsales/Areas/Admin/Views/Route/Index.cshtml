@using Busticketsales.Models;
@model IList<Route>
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h2> Danh sách các tuyến đường</h2>
    </div>

    <p>
        <a type="button" class="btn btn-success" asp-area="Admin" asp-controller="Route" asp-action="Create">
            <i class="bi bi-file-earmark-text me-1"></i> Thêm mới
        </a>
    </p>
    <section class="section dashboard">
        <div class="row">
            <div class="col-12">
                <div class="card recent-sales overflow-auto">
                    <div class="card-body mt-4">
                        <table class="table table-borderless datatable">
                            <thead>
                                <tr>
                                    <th class="col-1 text-center">#</th>
                                    <th class="col-2 text-center">Điểm đi</th>
                                    <th class="col-2 text-center">Điểm đến</th>
                                    <th class="col-1 text-center">Hình ảnh</th>
                                    <th class="col-1 text-center">Ẩn hiện</th>
                                    <th class="col-3 text-center">Chức năng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th class="text-center" scope="row"> @item.RouteID</th>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Route" asp-action="Details"
                                           asp-route-id="@item.PointOfDe" class="text-primary">@item.PointOfDe</a>
                                        </td>
                                        <td>
                                            <a asp-area="Admin" asp-controller="Route" asp-action="Details"
                                           asp-route-id="@item.PointOfDe" class="text-primary">@item.StopPoint</a>
                                        </td>
                                        <td class="text-center">@item.Images</td>
                                        <td class="text-center">@item.IsActive</td>

                                        <td class="text-center">
                                            <a asp-area="Admin" asp-controller="Route" asp-action="Details"
                                           asp-route-id="@item.RouteID" class="btn bg-success btn-sm"
                                               title="Xem nội dung"><i class="text-white bi bi-eye"></i></a>

                                            <a asp-area="Admin" asp-controller="Route" asp-action="Edit"
                                           asp-route-id="@item.RouteID" class="btn bg-warning btn-sm"
                                               title="Sửa nội dung"><i class="text-white bi bi-pencil"></i></a>

                                            <a asp-area="Admin" asp-controller="Route" asp-action="Delete"
                                           asp-route-id="@item.RouteID" class="btn btn-danger btn-sm"
                                               title="Xóa nội dung"><i class="bi bi-trash"></i></a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

