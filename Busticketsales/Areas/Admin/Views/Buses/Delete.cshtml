@model Busticketsales.Models.BookingOrder
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<main id="main" class="main">
    <div class="pagetitle">
        <h2>Xác nhận xóa </h2>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="text" class="form-control mb-3" asp-for="BookingOrderID" hidden />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="BookingOrderID">BookingOrderID</label>
            <input type="text" class="form-control mb-3" asp-for="BookingOrderID" disabled />
        </div>

        <div class="form-group col-md-6">
            <label asp-for="PointEnd">Điểm xuất phát</label>
            <input type="text" class="form-control mb-3" asp-for="PointEnd" disabled />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="PointEnd">Điểm kết thúc</label>
            <input type="text" class="form-control mb-3" asp-for="PointEnd" disabled />
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingOrderID" />
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trash-fill"></i> Xóa 
        </button>
    </form>

</main>
