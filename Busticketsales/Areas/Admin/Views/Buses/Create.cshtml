@using Busticketsales.Utilities;
@model Busticketsales.Models.BookingOrder;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main">
    <div class="pagetitle">
        <h2>Thêm mới </h2>
    </div>
    <!-- Begin Form-->
    <form asp-action="Create" method="post">
        <div class="form-group col-md-12">
            <label asp-for="Time">Giờ xuât phát</label>
            <input type="text" class="form-control mb-3" asp-for="Time" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ArrivalTime">Giờ đến nơi</label>
            <input type="text" class="form-control mb-3" asp-for="ArrivalTime" />
        </div>

        <div class="col-12">
            <label for="booking" class="form-label">Bắt đầu đi từ tỉnh</label>

            <select asp-for="ProvinceStart" class="form-control" asp-items="@(new SelectList(ViewBag.bk, "Value","Text"))" required></select>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">Đến nơi tỉnh</label>

            <select asp-for="ProvinceEnd" class="form-control" asp-items="@(new SelectList(ViewBag.bke, "Value","Text"))" required></select>
        </div>

        <div class="col-12">
            <label for="booking" class="form-label">Điểm đón</label>

            <select asp-for="PointStart" class="form-control" asp-items="@(new SelectList(ViewBag.bks, "Value","Text"))" required></select>
        </div>
        <div class="col-12">
            <label for="inputAddress" class="form-label">Điểm trả</label>

            <select asp-for="PointEnd" class="form-control" asp-items="@(new SelectList(ViewBag.bkes, "Value","Text"))" required></select>
        </div>
      


          <div class="form-group col-md-12">
            <label asp-for="Seat">chỗ Ngồi</label>
            <input type="text" class="form-control mb-3" asp-for="Seat" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Price">Giá tiền</label>
            <input type="text" class="form-control mb-3" asp-for="Price" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="Date">Ngày đi</label>
            <input type="date" class="form-control mb-3" asp-for="Date" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="ItemTarget">ItemTarget</label>
            <input type="text" class="form-control mb-3" asp-for="ItemTarget" />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="IdName">IdName</label>
            <input type="text" class="form-control mb-3" asp-for="IdName" />
        </div>
        <div class="form-group col-md-6 mt-3 mb-3">
            <label>
                @Html.CheckBox("IsActive", false)
                Hiển thị
            </label>
        </div>
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trassh-fill"></i> Lưu lại
        </button>
    </form>
    <!-- End Form-->
</main>