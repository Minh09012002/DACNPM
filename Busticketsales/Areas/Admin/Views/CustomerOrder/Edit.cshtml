@model Busticketsales.Models.CustomerOrder
@using Busticketsales.Utilities;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<main id="main" class="main">
    <div class="pagetitle">
        <h2>Sửa vé cho khách hàng</h2>
    </div>
    <!-- Begin Form-->
    <form asp-action="Edit" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="text" class="form-control mb-3" asp-for="CustomerOrderID" hidden />
            </div>
        </div>
        <div class="form-group col-md-12">
            <label asp-for="FullName">Họ Tên </label>
            <input name="Name" type="text" class="form-control mb-3" asp-for="FullName"  />
        </div>
        <div class="form-group col-md-12">
            <label asp-for="SĐT">Số điện thoại</label>
            <input name="sdt" type="text" class="form-control mb-3" asp-for="SĐT" />
        </div>

        <div class="form-group col-md-12">
            <label asp-for="Email">Email</label>
            <input name="Email" type="text" class="form-control mb-3" asp-for="Email" />
        </div>

        <div class="form-group col-md-12">
            <label asp-for="Date">Ngày đi</label>
            <input name="Date" type="text" class="form-control mb-3" asp-for="Date" />
        </div>

        <div class="form-group col-md-12">
            <label asp-for="time">Giờ đi</label>
            <input name="Time" type="text" class="form-control mb-3" asp-for="time" />
        </div>
        <div class="col-12 d-none">
        <label class="form-label">Tỉnh đi</label>
            <input name="ProvinceStr" type="text" class="form-control disable" asp-for="ProvinceStr" />
        </div>
        <div class="col-12 d-none">
        <label class="form-label">Tỉnh đến</label>
        <input name="ProvinceEnd" type="text" class="form-control disable" asp-for="ProvinceEnd"/>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PointStrDetail">Điểm đi</label>
                <select name="PointStr" asp-for="PointStrDetail" class="form-control" asp-items="@(new SelectList(ViewBag.bk, "Value", "Text"))">
                </select>
                <span asp-validation-for="PointStrDetail" class="alert-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="PointEndDetail">Điểm dừng</label>
                <select name="PointEnd" asp-for="PointEndDetail" class="form-control" asp-items="@(new SelectList(ViewBag.bke, "Value", "Text"))">
                </select>
                <span asp-validation-for="PointEndDetail" class="alert-danger"></span>
            </div>
        </div>
        <div class="form-group d-none">
            <label asp-for="Seat">Số Ghế</label>
            <input name="Seat" type="text" asp-for="Seat" class="form-control" />
        </div>
        <div class="form-group d-none">
            <label asp-for="CustomerID">Id Khách hàng</label>
            <input name="CustomerID" type="text" asp-for="CustomerID" class="form-control" />
        </div>
        <div class="form-group d-none">
            <label asp-for="BookingOrderID">BookingOd</label>
            <input name="BookingOrderID" type="text" asp-for="BookingOrderID" class="form-control" />
        </div>
        <div class="form-group d-none">
            <label asp-for="TotalPrice">Tổng giá tiền</label>
            <input name="TotalPrice" type="text" asp-for="TotalPrice" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Status">Trạng thái</label>
            <input name="Status" type="text" asp-for="Status" class="form-control" />
        </div>
        <div class="form-group col-md-6 mt-3 mb-3">
            @Html.CheckBox("IsActive",Model.IsActive)
            Hiển thị
        </div>
        
        <a class="btn btn-lg btn-warning p-2 mr-5" href="javascript:history.back()">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>
        <button type="submit" class="btn btn-lg btn-danger p-2">
            <i class="bi bi-trassh-fill"></i> Lưu lại
        </button>
    </form>
    <!-- End Form-->
</main>
@{
    var summerNote = new Busticketsales.Areas.Admin.Models.SummerNote("#Contents");
    <partial name="_SummerNote" model="summerNote" />
}



